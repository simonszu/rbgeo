<%
allcachecount = Cache.all.length
microcount = Cache.where(size: "micro").length
micropercent = ((microcount.to_f/allcachecount.to_f)*100).round(1)
smallcount = Cache.where(size: "small").length
smallpercent = ((smallcount.to_f/allcachecount.to_f)*100).round(1)
regularcount = Cache.where(size: "regular").length
regularpercent = ((regularcount.to_f/allcachecount.to_f)*100).round(1)
othercount = Cache.where(size: "other").length
otherpercent = ((othercount.to_f/allcachecount.to_f)*100).round(1)
notchosencount = Cache.where(size: "not chosen").length
notchosenpercent = ((notchosencount.to_f/allcachecount.to_f)*100).round(1)
largecount = Cache.where(size: "large").length
largepercent = ((largecount.to_f/allcachecount.to_f)*100).round(1)
%>
