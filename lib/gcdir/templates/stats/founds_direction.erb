        	[<%= Math.log(nwa.mean) %>],
        	[<%= Math.log(nnwa.mean) %>],
        	[<%= Math.log(na.mean) %>]
        ]);
		var chart = new google.visualization.ImageChart(document.getElementById('dist_radar_div'));
		var options = {	cht: 'r', 
        				chs: '380x380',
        				chtt: 'Durchschnittliche Entfernung (km) in Richtung',
        				chts: '000000,12',
        				chco: '224499,00ff00',
        				chls: '2,4,0',
        				chxt: 'x,y',
        				chxr: '0,0.0,360,0',
        				chm: 'B,76A4FB50,0,0,1|h,C0C0C0,0,1.0,0.5|h,C0C0C0,0,0.75,0.5|h,C0C0C0,0,0.50,0.5|h,C0C0C0,0,0.25,0.5|o,000099,0,-1,7.0',
        				chf: 'bg,s,FFFFFF00',
        				chxl: '0:|N(<%= na.mean %>)|NNO(<%= nnea.mean %>)|NO(<%= nea.mean %>)|ONO(<%= enea.mean %>)|O(<%= ea.mean %>)|OSO(<%= esea.mean %>)|SO(<%= sea.mean %>)|SSO(<%= ssea.mean %>)|S(<%= sa.mean %>)|SSW(<%= sswa.mean %>)|SW(<%= swa.mean %>)|WSW(<%= wswa.mean %>)|W(<%= wa.mean %>)|WNW(<%= wnwa.mean %>)|NW(<%= nwa.mean %>)|NNW(<%= nnwa.mean %>)|1:||-|-|-|<%= bdv %>',
        				chxs: '0,000000,12,1.3,t,ffffff|1,000000,12,1.3,t,ffffff'
